{
  "swagger": "2.0",
  "info": {
    "title": "Account Balance API",
    "version": "1.0.0"
  },
  "basePath": "/api",
  "paths": {
    "/AccountBalance/getBalance/custAcNo/{custAcNo}": {
      "get": {
        "summary": "Get account balance",
        "parameters": [
          {
            "name": "custAcNo",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "Customer Account Number"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response"
          }
        }
      }
    },
    "/AccountBalance/postBalance": {
      "post": {
        "summary": "Post account balance",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "schema": {
              "$ref": "#/definitions/BalanceRequest"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response"
          }
        }
      }
    }
  },
  "definitions": {
    "BalanceRequest": {
      "type": "object",
      "properties": {
        "custAcNo": {
          "type": "string",
          "description": "Customer Account Number"
        },
        "amount": {
          "type": "number",
          "description": "Balance Amount"
        }
      },
      "required": ["custAcNo", "amount"]
    }
  }
}